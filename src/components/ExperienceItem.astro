---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}
const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-200 bg-gray-100"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-200/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-yellow-200  mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-200  text-pretty">
  {description}
</p>
{
  link && (
    <a href={link}
    class="inline-flex items-center gap-1 bg-white px-4 py-2 text-sm font-medium border rounded-lg hover:text-white focus:z-10 focus:ring-4 focus:outline-none focus:text-blue-700 text-gray-700 border-gray-600 hover:bg-gray-700 focus:ring-gray-700 transition"
    >
      Saber m√°s...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
